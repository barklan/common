############################
# STEP 1 build executable binary
############################
FROM golang:1.17.3-alpine as builder

ARG BUILDKIT_INLINE_CACHE=1
ARG APP_NAME=changeme

# Install git + SSL ca certificates.
# Git is required for fetching the dependencies.
# Ca-certificates is required to call HTTPS endpoints.
RUN apk update && apk add --no-cache git ca-certificates tzdata && update-ca-certificates

# Create appuser
ENV USER=appuser
ENV UID=10001

# See https://stackoverflow.com/a/55757473/12429735
RUN adduser \
    --disabled-password \
    --gecos "" \
    --home "/nonexistent" \
    --shell "/sbin/nologin" \
    --no-create-home \
    --uid "${UID}" \
    "${USER}"
WORKDIR $GOPATH/src/mypackage/myapp/

# use modules
COPY go.mod .

ENV GO111MODULE=on
RUN go mod download
RUN go mod verify

COPY . .

# Build the binary
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build \
    -ldflags='-w -s -extldflags "-static"' -a \
    -o /go/bin/${APP_NAME} .

RUN mkdir -p /app/media

############################
# STEP 2 build a small image
############################
FROM scratch

ARG APP_NAME

# Import from builder.
COPY --from=builder /usr/share/zoneinfo /usr/share/zoneinfo
COPY --from=builder /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/
COPY --from=builder /etc/passwd /etc/passwd
COPY --from=builder /etc/group /etc/group
COPY --from=builder /app/media /app/media

# Copy our static executable
COPY --from=builder /go/bin/${APP_NAME} /go/bin/${APP_NAME}

# Use an unprivileged user.
# May be some problems with that as the container does not include shell
# USER appuser:appuser

# Run the binary.
# Must specify entrypoint or command.
# ENTRYPOINT ["/go/bin/changeme"]
